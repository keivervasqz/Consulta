@using Admin_Interface.Models.Request;
@model Admin_Interface.Models.roles

@{
    ViewBag.Title = "Rol - Registro";


}

<h2>Roles</h2>

<hr />

<input type="hidden" id="page" value="roles_Usuario" />

<div class="resalt form-group col-xs-12 text-center">

    @using (Html.BeginForm())
    {
        <h3>Registro de un nuevo Rol</h3>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group col-sm-12">
            @Html.EditorFor(model => model.nivel_rol, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nivel Rol", @required = "required" } })
            @Html.ValidationMessageFor(model => model.nivel_rol, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-sm-12">
            <input type="submit" value="Registrar" class="btn btn-success" />
            <a href="@Url.Action("Index", "roles_Usuario" )">
                <input type="button" class="btn btn-info" value="Volver Atras" />
            </a>
        </div>
    }

    @if (ViewBag.DuplicateID)
    {
        <div class="alert-danger">
            Este Rol ya está registrado
        </div>
    }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>