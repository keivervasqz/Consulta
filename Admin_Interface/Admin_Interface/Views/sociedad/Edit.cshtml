@model Admin_Interface.Models.sociedades

@{
    ViewBag.Title = "Sociedades - Actualización";
}

<h2>Sociedades</h2>

<hr />

<input type="hidden" id="page" value="Sociedades" />

<div class="resalt form-group col-xs-12 text-center">

    @using (Html.BeginForm())
    {

        <h3>Actualización de Sociedad</h3>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group col-sm-12">
            @Html.EditorFor(model => model.id, new { htmlAttributes = new { @class = "form-control", @disabled="disabled" } })
            @Html.ValidationMessageFor(model => model.id, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-sm-12">
            @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control", @placeholder="Nombre de Sociedad", @required="required" } })
            @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-sm-12">
            <input type="submit" value="Actualizar" class="btn btn-success" />
            <a href="@Url.Action("Index", "sociedad" )">
                <input type="button" class="btn btn-info" value="Volver Atras" />
            </a>
        </div>
    }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>
